{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node16",
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "checkJs": true,
    "strict": true
  },
  "include": [
    "src"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "preact",
      "preact/jsx-runtime"
    ]
  }
}